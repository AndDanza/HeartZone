<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="air1715.pillcare.Registracija_Activity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="316dp"
        android:layout_height="63dp"

        android:layout_marginTop="16dp"
        android:foregroundGravity="top"
        android:gravity="center_horizontal"
        android:text="Registracija"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/input_FirstName"
        app:layout_constraintVertical_bias="0.291" />

    <EditText
        android:id="@+id/input_FirstName"
        android:layout_width="223dp"
        android:layout_height="53dp"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="84dp"
        android:background="@android:drawable/btn_default_small"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword"
        android:text="Ime"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/input_LastName"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/input_Password"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/btn_default_small"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword"
        android:text="Lozinka"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_registration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/input_LastName"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/btn_default_small"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword"
        android:text=" Prezime"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/input_UserNameRegistration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/input_Email"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/btn_default_small"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword"
        android:text="E-mail"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/input_Password"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/input_UserNameRegistration"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/btn_default_small"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword"
        android:text="Korisnicko ime"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/input_Email"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


    <Button
        android:id="@+id/button_registration"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="Registriraj me"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
